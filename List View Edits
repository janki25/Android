//For Creating & Populating List View
String[] noteList = new String[100];
for(int i=0; i<100; i++) {
    noteList[i] = "Note " + String.valueOf(i+1)
    }
ArrayAdapter adapter = new ArrayAdapter<String>(this, android.R.layout.simple_list_item_1, android.R.id.text1, noteList);
listView = (ListView) findViewById(R.id.NoteList);
listView.setAdapter(adapter);
